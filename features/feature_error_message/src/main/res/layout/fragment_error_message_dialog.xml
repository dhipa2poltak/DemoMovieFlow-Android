<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="@dimen/error_message_list_item_spacing_half"
      android:paddingTop="@dimen/error_message_list_item_spacing_half"
      android:paddingStart="@dimen/error_message_list_item_spacing_half"
      android:paddingLeft="@dimen/error_message_list_item_spacing_half"
      android:paddingEnd="@dimen/error_message_list_item_spacing_half"
      android:paddingRight="@dimen/error_message_list_item_spacing_half">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/error_message_title_message"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/error_message_list_item_spacing_half"
        android:paddingTop="@dimen/error_message_list_item_spacing_half" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/error_message_text_ok"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
